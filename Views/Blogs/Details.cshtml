@* Cover Blog -- > arka plan foto ve Blog title  *@
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.BlogImage');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <span class="post-category text-white bg-success mb-3">@Model.Categories.CategoriesName</span>
                    <h1 class="mb-4"><a href="#">@Model.BlogHeader</a></h1>
                    <div class="post-meta align-items-center text-center">
                        <figure class="author-figure mb-0 mr-3 d-inline-block"><img src="@Model.Writer.WriterImage " alt="Image" class="img-fluid"></figure>
                        <span class="d-inline-block mt-1">@Model.Writer.WriterN_S</span>
                        <span>&nbsp;-&nbsp; @(((DateTime)Model.BlogDate).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="site-section py-lg">
    <div class="container">

        <div class="row blog-entries element-animate">

            @* LongText-- >  Blog Long detail !!!Commentler gelecek *@
