                <div class="post-content-body">
                    <p>
                        @Model.BlogDetail .
                    </p>


                </div>
            </div>

            @*About Writer-- > Author of Blog  !!Kategori ve popular posts*@
            <div class="col-md-12 col-lg-4 sidebar">
                <div class="sidebar-box">
                    <div class="bio text-center">
                        <img src="@Model.Writer.WriterImage" alt="Image Placeholder" class="img-fluid mb-5">
                        <div class="bio-body">
                            <h2>@Model.Writer.WriterN_S</h2>
                            <p class="mb-4">@Model.Writer.WriterAbout</p>
                            @*<p><a href="#" class="btn btn-primary btn-sm rounded px-4 py-2">Diğer Yazılarım</a></p>*@

                        </div>
                    </div>
                </div>

                @*blog fotografi*@
